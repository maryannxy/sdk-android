<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:orientation="vertical"
    tools:context="com.xyfindables.core.sample.XYFindablesCoreSampleActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Crashlytics Version: " />

        <TextView
            android:id="@+id/txtCrashlyticsVersion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Crashlytics Status: " />

        <TextView
            android:id="@+id/txtCrashlyticsStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="None" />
    </LinearLayout>

    <Button
        android:id="@+id/btnTestLogging"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Test Logging"/>

</LinearLayout>
